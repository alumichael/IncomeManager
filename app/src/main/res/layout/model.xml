<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:padding="3dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_width="wrap_content">
        <ImageView
            android:id="@+id/total_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_total"
            android:layout_marginBottom="10dp"


            />
        <ImageView
            android:id="@+id/saving_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_savig_purple"
            android:layout_marginBottom="10dp"

            />

        <ImageView
            android:id="@+id/balance_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_balance_indigo"



            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_width="match_parent">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Income"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        />
        <TextView
            android:id="@+id/total_income_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#12000"
            android:textSize="15sp"
            android:textColor="@color/black"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saving Goal"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/saving_goal_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#12000"
            android:textSize="15sp"
            android:textColor="@color/black"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/balance_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#12000"
            android:textSize="15sp"
            android:textColor="@color/black"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />
        <TextView
            android:id="@+id/date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Date"
            android:layout_marginEnd="4dp"
            android:drawableEnd="@drawable/ic_date"
            android:textStyle="italic"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:src="@drawable/ic_delete"
                android:layout_margin="4dp"

                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check out for some Expenses"
                />

            <ImageView
                android:id="@+id/check_expenses"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:src="@drawable/ic_arror"
                android:layout_margin="4dp"
                android:layout_gravity="end"



                />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>